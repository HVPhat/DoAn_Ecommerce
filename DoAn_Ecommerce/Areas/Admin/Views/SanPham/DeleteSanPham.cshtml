@model SanPhamModel

<div class="modal fade" id="addSanPham">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> Are you sure you want to delete this?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TenSanPham)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.HinhAnh)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.HinhAnh)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.SoLuongTon)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SoLuongTon)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Gia)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Gia)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Mota)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Mota)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TrangThai)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LoaiSanPham)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LoaiSanPham.TenLoai)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" data-save="modal">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

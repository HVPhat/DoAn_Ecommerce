@model TinTucModel

<div class="modal fade" id="addtintuc">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> Are you sure you want to delete this?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TieuDe)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TieuDe)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TomTat)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TomTat)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NoiDung)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NoiDung)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NgayDang)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NgayDang)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LuotXem)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LuotXem)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TrangThai)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.HinhAnh)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.HinhAnh)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NhanVien)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NhanVien.Id)
                        </dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger" data-save="modal">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
